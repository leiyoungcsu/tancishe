/* pages/game/game.wxss */
/* 游戏画布样式 */
canvas{
  border: 1rpx solid #e64340;
  width: 320px;
  height: 320px;
}

/* 方向键按钮整体区域 */
.btnBox{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 方向键第二行 */
.btnBox view{
  display: flex;
  flex-direction: row;
}

/* 所有方向键按钮样式 */
.btnBox button{
  width: 90rpx;
  height: 90rpx;
}

/* 所有按钮样式 */
button{
  margin: 10rpx;
  background-color: #e64340;
  color: white;
}
